@model IEnumerable<FrameworkProject.Models.Products>
@{
    <style>
        .profile {
            font-size: 20px;
            margin-top: rem(50);
            padding-bottom: 120px;
        }

        .profile-container {
            font-family: $font-aeonik;
            font-size: rem(16);
            font-weight: 300;
            line-height: rem(24);
        }

            .profile-container a {
                color: black;
            }

        .profile-desc {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: rem(1035);
            margin: 0 auto rem(10);
            padding: 0 rem(40);
        }

            .profile-desc a {
                color: #2F80ED;
            }

        .profile-direction-link {
            padding-left: rem(15);
        }

        .profile-direction {
            position: relative;
            margin-bottom: rem(10);
        }

            .profile-direction:before {
                content: url("/wwwroot/polygon.png");
                position: absolute;
                left: rem(-18);
            }

        .profile-main {
            width: rem(1270);
            height: rem(1230);
            margin: 0 auto;
            border-radius: rem(10);
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .profile-name {
            color: #C7C7C7;
        }

        h1 {
            font-size: 20px;
            text-align: center;
            margin: rem(10) 0;
        }

            h1 .small {
                display: block;
                font-size: 15px;
                padding-top: 8px;
                color: gray;
            }

        .profile-avt-name {
            font-size: rem(20);
            font-weight: 500;
            text-align: center;
        }

        .avatar-upload {
            max-width: 205px;
            padding-top: rem(93);
        }


            .avatar-upload .avatar-edit input {
                display: none;
            }



            .avatar-upload .avatar-preview {
                width: 192px;
                height: 192px;
                position: relative;
                border-radius: 100%;
                border: 6px solid #F8F8F8;
                box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);
            }

                .avatar-upload .avatar-preview > div {
                    width: 100%;
                    height: 100%;
                    border-radius: 100%;
                    background-size: cover;
                    background-repeat: no-repeat;
                    background-position: center;
                }

        .form-all {
            display: flex;
            justify-content: space-around;
            margin: rem(60) 0;
        }

        .form-left,
        .form-right {
        }

        .form-lable {
            font-size: rem(20);
            font-weight: 400;
            line-height: rem(19);
            display: block;
        }

        .form-input {
            width: rem(425);
            height: rem(65);
            border: rem(1) solid #ABABAB;
            border-radius: rem(50);
            padding-left: rem(50);
            margin-bottom: rem(20);
        }

            .form-input::placeholder {
                font-size: rem(20);
                font-weight: 400;
                line-height: rem(19);
                color: #C7C7C7;
            }

        .btn {
            font-size: 20px;
            font-weight: 500;
            line-height: 54px;
            letter-spacing: 5px;
            width: 130px;
            height: 50px;
            text-align:center;
            color: white;
            background-color: #010101;
            border-radius: 50px;
            border: 5px solid black;
            padding: 0;
            display: block;
            margin: 20px auto;
            line-height: 50px;
        }

            .btn:focus {
                color: aqua;
            }

            .btn:hover,
            .btn:active {
                background-color: white;
                color: black;
            }
    </style>
    <section class="profile">
        <div class="container profile-container">
            <div class="d-flex justify-content-center align-content-center font-weight-bold mb-lg-5 mt-lg-5">ADD PRODUCT</div>
            <div class="profile-main mb-5">
                <!-- input -->
                <form class="d-flex flex-column" action="/Products/AddProduct" method="post">
                    
                    <div class="form-all">
                        <div class="form-left mt-5">
                            <label for="Name" class="form-lable">Name</label>
                            <input type="text" id="manage" name="Name" placeholder="Name" value="" class="form-input">

                            <label for="Description" class="form-lable mt-4">Description</label>
                            <input type="text" id="manage" name="Description" placeholder="Description" value="" class="form-input">

                            <label for="Quantity" class="form-lable mt-4">Quantity</label>
                            <input type="number" id="manage" name="Quantity" placeholder="Quantity" value="" class="form-input">

                        </div>
                        <div class="form-right mt-5">
                            <label for="Cateid" class="form-lable">Category</label>
                            <input type="number" id="manage" name="Cateid" placeholder="Cateid" value="" class="form-input">

                            <label for="Price" class="form-lable mt-4">Price</label>
                            <input type="number" id="manage" name="Price" placeholder="Price" value="" class="form-input">

                            <label for="Img" class="form-lable mt-4">Image Link</label>
                            <input type="text" id="manage" name="Img" placeholder="Image Link" value="" class="form-input">
                        </div>
                    </div>
                    <input type="submit" class="btn text-center" value="Add"/>
                </form>
            </div>
        </div>
    </section>
}
