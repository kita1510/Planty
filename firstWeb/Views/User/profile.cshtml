@{
    ViewData["Title"] = "Profile"; }
@model IEnumerable<FrameworkProject.Models.Users>
@{
    <style>
        .profile {
            font-size: 20px;
            margin-top: rem(50);
        }

        .profile-container {
            font-family: $font-aeonik;
            font-size: rem(16);
            font-weight: 300;
            line-height: rem(24);
        }

            .profile-container a {
                color: black;
            }

        .profile-desc {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: rem(1035);
            margin: 0 auto rem(10);
            padding: 0 rem(40);
        }

            .profile-desc a {
                color: #2F80ED;
            }

        .profile-direction-link {
            padding-left: rem(15);
        }

        .profile-direction {
            position: relative;
            margin-bottom: rem(10);
        }

            .profile-direction:before {
                content: url("/wwwroot/polygon.png");
                position: absolute;
                left: rem(-18);
            }

        .profile-main {
            width: rem(1270);
            height: rem(1230);
            margin: 0 auto;
            border-radius: rem(10);
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        }

        .profile-name {
            color: #C7C7C7;
        }

        h1 {
            font-size: 20px;
            text-align: center;
            margin: rem(10) 0;
        }

            h1 .small {
                display: block;
                font-size: 15px;
                padding-top: 8px;
                color: gray;
            }

        .profile-avt-name {
            font-size: rem(20);
            font-weight: 500;
            text-align: center;
        }

        .avatar-upload {
            max-width: 205px;
            padding-top: rem(93);
        }


            .avatar-upload .avatar-edit input {
                display: none;
            }



            .avatar-upload .avatar-preview {
                width: 192px;
                height: 192px;
                position: relative;
                border-radius: 100%;
                border: 6px solid #F8F8F8;
                box-shadow: 0px 2px 4px 0px rgba(0, 0, 0, 0.1);
            }

                .avatar-upload .avatar-preview > div {
                    width: 100%;
                    height: 100%;
                    border-radius: 100%;
                    background-size: cover;
                    background-repeat: no-repeat;
                    background-position: center;
                }

        .form-all {
            display: flex;
            justify-content: space-around;
            margin: rem(60) 0;
        }

        .form-left,
        .form-right {
        }

        .form-lable {
            font-size: rem(20);
            font-weight: 400;
            line-height: rem(19);
            display: block;
        }

        .form-input {
            width: rem(425);
            height: rem(65);
            border: rem(1) solid #ABABAB;
            border-radius: rem(50);
            padding-left: rem(50);
            margin-bottom: rem(20);
        }

            .form-input::placeholder {
                font-size: rem(20);
                font-weight: 400;
                line-height: rem(19);
                color: #C7C7C7;
            }

        .btn {
            font-size: 20px;
            font-weight: 500;
            line-height: 40px;
            letter-spacing: 5px;
            width: 130px;
            height: 50px;
            color: white;
            background-color: #010101;
            border-radius: 50px;
            border: 5px solid black;
            padding: 0;
            display: block;
            margin: 20px auto;
            line-height: 50px;
        }

            .btn:focus {
                color: aqua;
            }

            .btn:hover,
            .btn:active {
                background-color: white;
                color: black;
            }
    </style>
    <section class="profile">
        <div class="container profile-container">
            <div class="profile-main">
                <!-- avatar -->
                <div class="d-flex justify-content-center w-100 ">
                    <div class="d-flex flex-column">
                        <div class="w-100 d-flex justify-content-center">
                            <div class="avatar-upload d-flex justify-content-center w-100">
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="background-image: url('https://images.unsplash.com/photo-1602491453631-e2a5ad90a131?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=627&q=80');">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <p class="profile-avt-name mt-5">@ViewData["fn"] @ViewData["ln"]</p>
                        <h1 class="profile-note-payment">Change and manage your information!</h1>
                    </div>
                </div>
                <!-- input -->
                <form class="d-flex flex-column" action="/User/SaveProfile" method="post">
                    <div class="form-all">
                        <div class="form-left">
                            <label for="firstname" class="form-lable">First name</label>
                            <input type="text" id="manage" name="firstname" placeholder="First name" value="@ViewData["fn"]" class="form-input">

                            <label for="Lastname" class="form-lable mt-4">Last name</label>
                            <input type="text" id="manage" name="Lastname" placeholder="Last name" value="@ViewData["ln"]" class="form-input">

                            <label for="Email" class="form-lable mt-4">Email</label>
                            <input type="Email" id="manage" name="Email" placeholder="Email" value="@ViewData["email"]" class="form-input">

                        </div>
                        <div class="form-right">
                            <label for="Password" class="form-lable">Password</label>
                            <input type="text" id="manage" name="Password" placeholder="Password" value="@ViewData["pass"]" class="form-input">

                            <label for="Address" class="form-lable mt-4">Address</label>
                            <input type="text" id="manage" name="Address" placeholder="Address" value="@ViewData["ad"]" class="form-input">

                            <label for="Phone" class="form-lable mt-4">Phone</label>
                            <input type="text" id="manage" name="Phone" placeholder="Phone" value="@ViewData["phone"]" class="form-input">
                        </div>
                    </div>

                    <input type="submit" class="btn" value="Save" />
                </form>
            </div>
        </div>
    </section>
}
